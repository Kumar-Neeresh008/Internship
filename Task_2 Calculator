# Simple Calculator
while True:  #start an infinity loop to allow repeated operations
    print("\n---Simple calculator---") #Display the calculator heading

    #input numbers from user
    try:
        n1=float(input("Enter the first number: "))
        n2=float(input("Enter the second number: "))

    except ValueError:  #handle invalid input (non numeric)
        print("Invalid input! Please enter numeric values. ")
        continue


    #Display the operation choices
    print("choose an operation.")
    print("1 for Addition (+)") 
    print("2 for Subtraction (-)") 
    print("3 for Multiplication (*)") 
    print("4 for Division (/)") 
    print("5 for Exit")  #option to exit the calculator 


    #Get user choice
    operation=input("Enter your choice(1/2/3/4/5): ")  


    #perform the chosen operation
    if operation=="1":
        result=n1+n2
        print(f"Result:{n1}+{n2}={result}")
    elif operation=="2":
        result=n1-n2
        print(f"Result:{n1}-{n2}={result}")
    elif operation=="3":
        result=n1*n2
        print(f"Result:{n1}*{n2}={result}")
    elif operation=="4":
        if n2!=0:
            result=n1/n2
            print(f"Result:{n1}/{n2}={result}")
        else:
            print("Error:Division by zero is not allowed.")
    elif operation =="5":
        print("Exiting calculator.\n Goodbye!...")
        #exit the loop and end the program
        break


else:
    print("Invalid choice.Please enter a valid option (1-5).")
